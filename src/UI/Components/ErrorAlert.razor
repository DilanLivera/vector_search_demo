@if (!string.IsNullOrWhiteSpace(ErrorMessage))
{
    <div class="max-w-2xl mx-auto mb-4 animate-fade-in pt-3">
        <div class="bg-red-500/90 backdrop-blur-md border-2 border-red-300/50 rounded-lg px-6 py-4 shadow-lg">
            <div class="flex items-center justify-between mb-2">
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-white mr-3 flex-shrink-0"
                         fill="none"
                         stroke="currentColor"
                         viewBox="0 0 24 24">
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <h3 class="text-white font-semibold text-lg">
                        Search Failed
                    </h3>
                </div>
                <button @onclick="ClearError"
                        class="text-white/70 hover:text-white transition-colors">
                    <svg class="w-5 h-5"
                         fill="none"
                         stroke="currentColor"
                         viewBox="0 0 24 24">
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
            <p class="text-white/90 text-center">@ErrorMessage</p>
        </div>
    </div>
}

@code {

    [Parameter]
    public string ErrorMessage { get; set; } = string.Empty;

    private void ClearError()
    {
        ErrorMessage = string.Empty;
    }
}
