@inherits LayoutComponentBase

<div class="flex flex-col h-screen bg-[#0f1729] font-sans antialiased text-gray-200">
    <Header></Header>

    <main class="flex-1 overflow-x-hidden overflow-y-auto">
        <article class="p-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui"
     class="fixed bottom-0 w-full bg-red-900 border-t-4 border-red-500 p-4 flex justify-between items-center hidden">
    <div class="flex items-center space-x-4">
        <p class="text-red-200">
            An unhandled error has occurred.
        </p>
        <button class="cursor-pointer px-3 py-1 bg-red-800 text-red-200 rounded hover:bg-red-700"
                onclick="window.location.reload()">
            Reload
        </button>
    </div>
</div>
